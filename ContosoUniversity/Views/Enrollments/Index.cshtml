@model IEnumerable<ContosoUniversity.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Add New Grade", "Create", null, new { @class = "btn btn-success" })
</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Students Grades</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Course Title
                        </th>
                        <th>
                            Full Name
                        </th>
                        <th>
                            Grade
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                        <td class="btn-group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>

